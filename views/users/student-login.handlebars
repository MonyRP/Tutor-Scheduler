<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../public/css/signup-login.css">
    <title>Student Login</title>
</head>

<body>

    <section id="login-section">
        <div class="container-fluid align-content-center mt-5">
            <div class="row justify-content-center">
                <div class="col-xl-3 col-lg-4 col-md-5 col-sm-6 align-self-center px-2">

                    <div class="card mx-auto shadow-lg border border-secondary rounded">
                        <div class="card-body">
                            <form action="/users/login/student" method="POST">
                                <h3 class="text-center mb-3">Login as<br>Student</h3>

                                <div class="form-row">
                                    <div class="form-group col">
                                        <label for="email">Email:</label>
                                        <input type="email" class="form-control" id="email" name="email"
                                            placeholder="johndoe@example.com">
                                    </div>
                                </div>

                                <div class="form-row mb-2">
                                    <div class="form-group col">
                                        <label for="password">Password:</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="password">
                                    </div>
                                </div>

                                <div class="form-row justify-content-center">
                                    <button class="btn btn-primary btn-lg btn-block">Log in</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    </div{{!-- End of signup form col --}}>
                </div>{{!-- End of row --}}
            </div> {{!-- End of container--}}
    </section>{{!-- End of signup section --}}

    {{!-- CDNs --}}
